<%# block top %>
<div class='container mt-3'>
  <div class='card-product d-flex'>
    <div class="image-container me-5">
      <% @item.photos.each do |photo| %>
      <%= cl_image_tag photo.key, class: "img-fluid", crop: :fill %>
      <% end %>
    </div>
    <div class='card-product-infos flex-grow-1'>
      <div>
        <h2 class="card-title color-blue"><%=@item.title.capitalize%></h2>
        <p class="artist-show-display thick-underline bold-text color-blue"><%=@item.artist.capitalize%></p>
        <p><%=@item.description.capitalize %></p>
        <p class="m-0 thick-underline"></p>
        <div class="flex align-items-center color-blue">
          <p style="width: 90px" class="mb-0 bold-text card-content-opacity">Price: </p>
          <p class="mb-0 bold-text card-content-opacity"><i class="fa-solid fa-euro-sign"></i> <%= @item.price.round() %> <sub>/ day</sub></p>
        </div>
        <div class="flex align-items-center color-blue">
          <p style="width: 90px" class="mb-0">Owner: </p>
          <p class="mb-0"><%=@item.user.first_name.capitalize%> <%=@item.user.last_name.capitalize%></p>
        </div>
        <div class="flex align-items-center color-blue">
          <p style="width: 90px" class="mb-0">Address: </p>
          <p class="mb-0"><%=@item.address%></p>
        </div>
      </div>
    </div>
  </div>
  <%# block bottom %>
  <div class='card mb-4 bg-white shadow'>
    <div class='card-body bg-white'>

      <div class="d-flex justify-content-between">
        <% if current_user && @item.user == current_user %>
          <%= link_to 'Delete', item_path(@item), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class:"btn btn-primary text-white" %>
        <% end %>
      </div>
    </div>
    <div class="col-6 p-4 pt-0 bg-white">
      <% if @item.user == current_user %>
        <h3>Edit item</h3>
        <%= render 'edit_form', item: @item %>
      <% end %>

      <% if current_user && @item.user != current_user %>
        <h3>Book the item</h3>
        <h4>Please select dates to check availability</h4>
        <%= render 'bookings/form', item: @item, booking: @booking %>
      <% end %>
    </div>
    <div class="col-4 px-4 pb-3 bg-white">
      <%= link_to 'Back', items_path, class:"btn btn-secondary" %>
    </div>
  </div>


</div>
