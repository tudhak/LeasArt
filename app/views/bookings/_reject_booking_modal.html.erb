<div class="modal fade" id="rejectBookedItemModal" tabindex="-1" aria-labelledby="rejectBookedItemModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="rejectBookedItemModalLabel">Decline booking request</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <p>You are going to decline <%= @booking.user.first_name %> <%= @booking.user.last_name %>'s booking request</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="blue-button" data-bs-dismiss="modal">Close</button>
        <%= link_to 'Reject booking', reject_booking_path(@booking), data: {turbo_method: :post}, class:"red-button reject-button" %>
      </div>
    </div>
  </div>
</div>
