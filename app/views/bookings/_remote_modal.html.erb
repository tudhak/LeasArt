<div class="modal fade" id="bookingModal" tabindex="-1" aria-labelledby="bookingModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5 color-blue" id="bookingModalLabel">Book <%= @item.title %></h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <p>Your booking request will be sent to <%= @item.user.first_name %> <%= @item.user.last_name %></p>
        <p><u>Total cost for the selected period:</u></p>
        <p data-modal-target="totalprice"></p>
      </div>
      <div class="modal-footer">
        <button type="button" class="blue-button" data-bs-dismiss="modal">Close</button>
        <input type="submit" class="red-button" value="Confirm booking">
      </div>
    </div>
  </div>
</div>
